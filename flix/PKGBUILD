pkgname=flix
pkgver=0.31.0
pkgrel=1
pkgdesc="Flix programming language"
arch=("any")
url="https://flix.dev/"
license=('Apache')
depends=('java-environment>=11')
source=(
    "flix.jar::https://github.com/flix/flix/releases/download/v${pkgver}/flix.jar"
    "launch-script.sh"
)
sha256sums=('447ad21fdb4ea45022cddb4f755e65cc597db6eca29ceca86f4fd655ac41fa60'
            'SKIP')

package() {
  install -Dm755 "${srcdir}/launch-script.sh" "${pkgdir}/usr/bin/flix"
  install -Dm644 "${srcdir}/flix.jar" "${pkgdir}/usr/share/java/flix/flix.jar"
}
