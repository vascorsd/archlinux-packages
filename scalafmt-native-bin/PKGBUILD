pkgname=scalafmt-native-bin
pkgver=2.3.2
pkgrel=1
pkgdesc="code formatter for the Scala programming language. Compiled Native binary."
arch=('any')
url="https://scalameta.org/scalafmt/"
license=('Apache')
provides=('scalafmt')
conflicts=('scalafmt')
source=("https://github.com/scalameta/scalafmt/releases/download/v${pkgver}/scalafmt-linux.zip")
sha256sums=('a0c0a57543a21243e38bde648e83fb3833ffd55fe8c056d8e8b7b5ab1724fa43')

package() {
  install -Dm755 "${srcdir}/scalafmt-linux/scalafmt" "${pkgdir}/usr/bin/scalafmt"
} 
