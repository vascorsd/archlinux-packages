pkgname=scalafmt-native-bin
pkgver=3.5.8
pkgrel=1
pkgdesc="code formatter for the Scala programming language. (native pre-compiled binary)"
arch=("x86_64")
url="https://scalameta.org/scalafmt/"
license=('Apache')
provides=('scalafmt')
conflicts=('scalafmt')
source=("https://github.com/scalameta/scalafmt/releases/download/v${pkgver}/scalafmt-linux-musl")
sha256sums=('c6ea8fa0b3d071508d60b4fae7f3eadb70f411011dca4ba4eb5076473c3829fa')

package() {
  install -D -m755 "${srcdir}/scalafmt-linux-musl" "${pkgdir}/usr/bin/scalafmt"
}
