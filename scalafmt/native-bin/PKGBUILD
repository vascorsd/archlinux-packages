pkgname=scalafmt-native-bin
pkgver=3.4.3
pkgrel=1
pkgdesc="code formatter for the Scala programming language. (native pre-compiled binary)"
arch=("x86_64")
url="https://scalameta.org/scalafmt/"
license=('Apache')
provides=('scalafmt')
conflicts=('scalafmt')
source=("https://github.com/scalameta/scalafmt/releases/download/v${pkgver}/scalafmt-linux-glibc")
sha256sums=('3faec034fbbea393f9dcb23c4134d30e1d855abada52a37dc141045af70b36a7')

package() {
  install -D -m755 "${srcdir}/scalafmt-linux-glibc" "${pkgdir}/usr/bin/scalafmt"
}
