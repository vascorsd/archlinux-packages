# Adapted from https://aur.archlinux.org/packages/coursier/

_version=2.0.0-RC6-18

pkgname=coursier-native-bin
pkgver="${_version//-/_}"
pkgrel=1
pkgdesc="Pure Scala Artifact Fetching. (native pre-compiled binary)"
arch=("x86_64")
url="http://get-coursier.io"
license=('Apache')
provides=('coursier')
conflicts=('coursier')
source=("cs::https://github.com/coursier/coursier/releases/download/v${_version}/cs-x86_64-pc-linux")
sha256sums=('e3e54536db519c89521e95234294b3e6c6b74a1178560b94d4d3bcc54f4c9f70')


package() {
  install -D -m755 "${srcdir}/cs" "${pkgdir}/usr/bin/coursier"
}
